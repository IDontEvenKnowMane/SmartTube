<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Minimalist, modern dark theme for a streaming-style UI (inspired by Netflix/Hulu/YouTube TV) -->

    <!-- Common attributes -->
    <attr name="brandColor" format="reference"/>
    <attr name="brandAccentColor" format="reference"/>
    <attr name="shelfBackground" format="reference"/>
    <attr name="cardDefaultBackground" format="reference"/>
    <attr name="cardSelectedBackground" format="reference"/>
    <attr name="cardProgressStyle" format="reference"/>
    <attr name="appLogo" format="reference"/>

    <!-- Grid and Row Spacing -->
    <style name="GridViewStyle" parent="Widget.Leanback.GridItems.VerticalGridView">
        <item name="android:horizontalSpacing">16dp</item>
        <item name="android:verticalSpacing">24dp</item>
    </style>

    <style name="RowViewStyle" parent="Widget.Leanback.Row.HorizontalGridView">
        <item name="android:horizontalSpacing">16dp</item>
    </style>

    <style name="BrowseHeaderStyle" parent="Widget.Leanback.Headers.VerticalGridView">
        <item name="android:verticalSpacing">12dp</item>
    </style>

    <!-- Universal Modern Theme -->
    <style name="App.Theme.ModernDark.Browse" parent="Theme.Leanback.Browse">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="brandColor">@android:color/black</item>
        <item name="brandAccentColor">@android:color/white</item>
        <item name="shelfBackground">@android:color/black</item>
        <item name="cardDefaultBackground">@android:color/darker_gray</item>
        <item name="cardSelectedBackground">@android:color/white</item>
        <item name="cardProgressStyle">?android:attr/progressBarStyleHorizontal</item>
        <item name="appLogo">@null</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="itemsVerticalGridStyle">@style/GridViewStyle</item>
        <item name="rowHorizontalGridStyle">@style/RowViewStyle</item>
        <item name="headersVerticalGridStyle">@style/BrowseHeaderStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item tools:targetApi="19" name="android:windowTranslucentNavigation">true</item>
        <item tools:targetApi="18" name="android:windowOverscan">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="App.Theme.ModernDark.Player" parent="Theme.Leanback">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="shelfBackground">@android:color/black</item>
        <item name="cardDefaultBackground">@android:color/darker_gray</item>
        <item name="cardSelectedBackground">@android:color/white</item>
        <item name="cardProgressStyle">?android:attr/progressBarStyleHorizontal</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="itemsVerticalGridStyle">@style/GridViewStyle</item>
        <item name="rowHorizontalGridStyle">@style/RowViewStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item tools:targetApi="19" name="android:windowTranslucentNavigation">true</item>
        <item tools:targetApi="18" name="android:windowOverscan">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="App.Theme.ModernDark.GuidedStep" parent="Theme.Leanback.GuidedStep">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="shelfBackground">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item tools:targetApi="19" name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="App.Theme.ModernDark.Preferences.Base" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item tools:targetApi="19" name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="App.Theme.ModernDark.Preferences" parent="App.Theme.ModernDark.Preferences.Base"/>
    <style name="AppTheme" parent="App.Theme.ModernDark.Browse" />
</resources>
