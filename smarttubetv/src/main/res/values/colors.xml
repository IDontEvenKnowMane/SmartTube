<resources>
    <!-- Background colors -->
    <color name="background_dark">#121212</color>           <!-- Almost pure black, clean and modern -->
    <color name="surface_dark">#1E1E1E</color>              <!-- Slightly lighter for cards, panels -->
    <color name="overlay_dark">#2C2C2C</color>              <!-- For overlays and shadows -->

    <!-- Primary colors -->
    <color name="primary_dark">#BB86FC</color>              <!-- Soft purple accent, modern and sleek -->
    <color name="primary_variant">#985EFF</color>           <!-- Darker purple for highlights -->

    <!-- Accent colors -->
    <color name="accent_color">#03DAC6</color>               <!-- Teal accent for buttons/links -->

    <!-- Text colors -->
    <color name="text_primary">#FFFFFF</color>               <!-- Pure white for main text -->
    <color name="text_secondary">#B3B3B3</color>             <!-- Light grey for secondary text -->
    <color name="text_disabled">#666666</color>              <!-- Dark grey for disabled elements -->

    <!-- Card colors -->
    <color name="card_background">#1E1E1E</color>            <!-- Matches surface_dark -->
    <color name="card_selected_background">#333333</color>   <!-- Darker for selected card -->

    <!-- Progress bar colors -->
    <color name="progress_primary">#BB86FC</color>           <!-- Matches primary dark -->
    <color name="progress_secondary">#985EFF</color>         <!-- Matches primary variant -->

    <!-- Navigation bar background (if used) -->
    <color name="navigation_bar">#121212</color>

    <!-- Divider lines -->
    <color name="divider">#2E2E2E</color>

    <!-- Shadow or subtle borders -->
    <color name="shadow_color">#00000080</color>              <!-- Black at 50% opacity -->
    
    <style name="App.Theme.ModernDark.Browse" parent="Theme.Leanback.Browse">
    <item name="android:windowBackground">@color/background_dark</item>
    <item name="brandColor">@color/primary_dark</item>
    <item name="brandAccentColor">@color/accent_color</item>
    <item name="shelfBackground">@color/surface_dark</item>
    <item name="cardDefaultBackground">@color/card_background</item>
    <item name="cardSelectedBackground">@color/card_selected_background</item>
    <item name="android:colorAccent">@color/accent_color</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <!-- Other attributes like grid spacing, animations, etc -->
</style>

<style name="App.Theme.ModernDark.Player" parent="Theme.Leanback">
    <item name="android:windowBackground">@color/background_dark</item>
    <item name="shelfBackground">@color/surface_dark</item>
    <item name="cardDefaultBackground">@color/card_background</item>
    <item name="cardSelectedBackground">@color/card_selected_background</item>
    <item name="android:colorAccent">@color/accent_color</item>
    <item name="playbackProgressPrimaryColor">@color/progress_primary</item>
    <item name="playbackProgressSecondaryColor">@color/progress_secondary</item>
    <!-- Other player-related styles -->
</style>


</resources>
